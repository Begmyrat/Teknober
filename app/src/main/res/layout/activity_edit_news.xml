<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditNews">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_title_4edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Title"/>

            <EditText
                android:id="@+id/edittext_title_4edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_title_4edit"/>

            <TextView
                android:id="@+id/textview_content_4edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content"
                android:layout_below="@+id/edittext_title_4edit"/>

            <EditText
                android:id="@+id/edittext_content_4edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_content_4edit"/>

            <TextView
                android:id="@+id/textview_date_4edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_content_4edit"
                android:text="Date"/>

            <EditText
                android:id="@+id/edittext_date_4edit"
                android:layout_width="match_parent"
                android:layout_below="@+id/textview_date_4edit"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_ImageURL_4edit"
                android:layout_width="match_parent"
                android:layout_below="@+id/edittext_date_4edit"
                android:layout_height="wrap_content"
                android:text="Image URL"/>

            <EditText
                android:id="@+id/edittext_imageURL_4edit"
                android:layout_width="match_parent"
                android:layout_below="@+id/textview_ImageURL_4edit"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/button_edit"
                android:layout_width="match_parent"
                android:layout_below="@+id/edittext_imageURL_4edit"
                android:layout_height="wrap_content"
                android:text="EDIT"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>